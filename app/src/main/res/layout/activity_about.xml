<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jemmy.calak.camart.view.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/layout_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/jemmy"
                            app:layout_heightPercent="50%"
                            app:layout_widthPercent="50%" />

                        <TextView
                            android:id="@+id/t0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="JEMMY SAPTA ANUARY"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t0"
                            android:gravity="center_horizontal"
                            android:text="Versi 1.0" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t2"
                            android:gravity="center_horizontal"
                            android:text="Tahun pembuatan : Desember 2017" />
                    </android.support.percent.PercentRelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_photo"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:text="Bantuan"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/no1"
                                android:text="1. "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban1"
                                android:layout_toRightOf="@+id/no1"
                                android:text="Untuk menemukan produk yang kamu cari, ada 2 cara yang bisa kamu lakukan, yaitu:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban2"
                                android:layout_below="@+id/ban1"
                                android:layout_toRightOf="@id/no1"
                                android:text="- Ketik nama produk di kolom pencarian.."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/ban3"
                                android:layout_below="@+id/ban2"
                                android:layout_toRightOf="@id/no1"
                                android:text="- Klik kategori-kategori yang ada di halaman Camart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/no2"
                                android:text="2. "
                                android:layout_below="@+id/ban3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban4"
                                android:layout_below="@+id/ban3"
                                android:layout_toRightOf="@+id/no2"
                                android:text="Setelah ketemu produk yang kamu mau, klik gambar produk tersebut untuk melihat informasi lengkap tentang produk yang kamu pilih, antara lain:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban5"
                                android:layout_below="@+id/ban4"
                                android:layout_toRightOf="@id/no2"
                                android:text="-Infomasi Produk : berisi semua informasi penting tentang produk yang sedang kamu lihat."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban52"
                                android:layout_below="@+id/ban5"
                                android:layout_toRightOf="@id/no2"
                                android:text="-Setelah itu anda dapat memasukan produk ke dalam keranjang belanja atau bisa memesan produk secara langsung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/no3"
                                android:text="3."
                                android:layout_below="@+id/ban52"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban10"
                                android:text="Setelah produk masuk ke keranjang apa yang harus kamu lakukan ?"
                                android:layout_below="@+id/ban52"
                                android:layout_toRightOf="@+id/no3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban6"
                                android:layout_toRightOf="@+id/no3"
                                android:layout_below="@+id/ban10"
                                android:text="- Anda akan memasuki ke tahap proses pemilihan alamat mana pesanan anda akan di kirim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/ban7"
                                android:layout_below="@+id/ban6"
                                android:layout_toRightOf="@id/no3"
                                android:text="-Lalu kamu di haruskan memilih ke bank mana anda akan mentransfer biaya pesanan tersebut, jika sudah memilih maka anda sudah selesai melalui proses pemesanan barang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/t1"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Aplikasi ini dibuat untuk melengkapi tugas akhir" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/copyright"
                            android:gravity="center"
                            android:text="Jemmy.sapta14@gmail.com" />

                        <TextView
                            android:id="@+id/copyright"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="Copyright@JemmyCalak"
                            android:textStyle="italic" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
