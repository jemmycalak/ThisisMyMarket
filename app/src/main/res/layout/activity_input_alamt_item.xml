<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/input_alamt"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        xmlns:card_view="http://schemas.android.com/tools"
        app:cardCornerRadius="0dp"
        >
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/layout1"
                >
                <TextView
                    android:text="Nama Penerima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/namapenerima_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Taylor Swift"/>
                <TextView
                    android:text="Alamat Penerima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/almt_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jl. Batu No.1, Jakarta"/>
                <TextView
                    android:text="Provinsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/provinsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jakarta"/>
                <TextView
                    android:text="No. Telp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/notelp_detail"
                    android:inputType="number"
                    android:maxLength="12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="08221234567"
                    />

            </LinearLayout>
        </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
</RelativeLayout>