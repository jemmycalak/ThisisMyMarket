<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="4dp">

            <ImageView
                android:id="@+id/imageConfirm"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/placeholder"/>

            <TextView
                android:id="@+id/namaConfirm"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageConfirm"
                android:text="Nama barang" />
            <TextView
                android:id="@+id/hargaConfirm"
                android:text="Harga"
                android:layout_below="@+id/namaConfirm"
                android:layout_toRightOf="@+id/imageConfirm"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/jumlahConfirm"
                android:text="Jumlah"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/hargaConfirm"
                android:layout_toRightOf="@+id/imageConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>